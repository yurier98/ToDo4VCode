{
    "name": "todo4vcode",
    "displayName": "ToDo4VCode",
    "description": "Professional task manager for developers. Organize your project tasks with clear priorities, due dates, and reminders directly in VS Code.",
    "version": "1.1.0",
    "publisher": "YurierHerrera",
    "author": "Yurier Herrera",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yurier98/ToDo4VCode.git"
    },
    "homepage": "https://github.com/yurier98/ToDo4VCode/blob/main/README.md",
    "bugs": {
        "url": "https://github.com/yurier98/ToDo4VCode/issues",
        "email": "yurierjesus@gmail.com"
    },
    "qna": "marketplace",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:todo4vcode-view"
    ],
    "keywords": [
        "todo",
        "task",
        "tasklist",
        "priority",
        "task-manager",
        "productivity",
        "management",
        "kanban",
        "focus",
        "todo4vcode",
        "reminders",
        "due-date",
        "multi-root ready"
    ],
    "main": "./out/extension.js",
    "icon": "media/icon.png",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "todo4vcode-explorer",
                    "title": "Priority Tasks",
                    "icon": "./media/icon.svg"
                }
            ]
        },
        "views": {
            "todo4vcode-explorer": [
                {
                    "type": "webview",
                    "id": "todo4vcode-view",
                    "name": "Tasks",
                    "icon": "./media/icon.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "todo4vcode.refresh",
                "title": "Refresh Tasks",
                "icon": "$(refresh)"
            },
            {
                "command": "todo4vcode.openFull",
                "title": "Open in full screen",
                "icon": "$(screen-full)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "todo4vcode.openFull",
                    "when": "view == todo4vcode-view",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "ToDo4VCode",
            "properties": {
                "todo4vcode.hideCompleted": {
                    "type": "boolean",
                    "default": false,
                    "description": "Hide completed tasks from the list."
                },
                "todo4vcode.defaultPriority": {
                    "type": "string",
                    "enum": [
                        "Must",
                        "Should",
                        "Could",
                        "Wont"
                    ],
                    "default": "Should",
                    "description": "Default priority for new tasks."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm run compile:ts && npm run compile:sass",
        "compile:ts": "tsc -p ./",
        "compile:sass": "sass media/styles/main.scss media/styles/main.css --style=compressed",
        "watch": "tsc -watch -p ./ & sass --watch media/styles/main.scss media/styles/main.css",
        "package": "vsce package",
        "publish": "vsce publish && ovsx publish",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "16.x",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "@vscode/vsce": "^3.7.1",
        "eslint": "^8.41.0",
        "ovsx": "^0.10.7",
        "sass": "^1.97.1",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.44"
    }
}
